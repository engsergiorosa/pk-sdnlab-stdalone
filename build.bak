---
# build.yml: Create your host and group var files from this
- hosts: localhost
  gather_facts: no
  roles:
    - build
  vars:
    ntp_server_list:
      - 192.168.0.12
    dns_server_list:
      - 192.168.0.12
    dns_domain: sdn40r8.lab
    nuage_vrs_rpm_location: "https://s3-us-west-2.amazonaws.com/nuage-demo-cala/40r8+files/nuage-openvswitch-4.0.8-172.el7.x86_64.rpm"
    nuage_dockermon_rpm_location: "https://s3-us-west-2.amazonaws.com/nuage-demo-cala/40r8+files/nuage-docker-monitor-4.0.8-172.el7.x86_64.rpm"
    public_if: bond0
    packet_token: "{{ lookup('file', '/home/dev/.packet_token') }}"
    project_id: "{{ lookup('file', '/home/dev/.packet_project_id') }}"
    nuage_license_key: "{{ lookup('file', '/home/dev/.nuage_license_key') }}"
    summary_file: "/home/dev/packet-nuagevns/.summary"
    ssh_key:
    - "{{ lookup('file', '/home/dev/.ssh/id_rsa.pub') }}"
    servers: 
      - { hostname: ns1.sdn40r8.lab,
          description: "name, ntp server" ,
          inventory: nserver ,
          memory: 4194304 ,
          vcpu_num: 2 ,
          disk_GB: 20 ,
          image_qcow2: /home/dev/images/centos7.qcow2 ,
          image_url: "https://s3-us-west-2.amazonaws.com/nuage-demo-cala/40r8+files/centos7.qcow2" ,
          hypervisor: core,
          ansible_host: 'centos@core:2012' ,
          gateway: 192.168.0.1,
          ntpservers: local , 
          nameservers: [ 8.8.8.8 , 8.8.4.4 ] ,
          interfaces: [
            { name: eth0 , bridge: core, ip: 192.168.0.12 , netmask: 255.255.255.0 },
            { name: eth1 , bridge: wan, ip: 10.250.250.2 , netmask: 255.255.255.0 },
            { name: eth2 , bridge: inet, ip: 80.80.80.2 , netmask: 255.255.255.0 }
          ] ,
          pat_rules: [
            { protocol: tcp , interface: bond0 , port: 53 , dest_port: 53 },
            { protocol: udp , interface: bond0 , port: 53 , dest_port: 53 },
            { protocol: udp , interface: bond0 , port: 123 , dest_port: 123 }
          ]
         }
